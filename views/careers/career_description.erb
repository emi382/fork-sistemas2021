        <h1 id="header title">Parameters of <%=career.name%>: </h1>
        <ul class="ListText">
          <li> id: <%=career.career_id%></li>
          <li> name: <%=career.name%></li>
          <li> survey count: <%=career.surveys.count%></li>
        </ul>
      <br>
      <div id="surveys">
        <%career.surveys.map do |survey|%>
          <h1> Surveys associated with <%=career.name%> </h1>
          <ul id="surveys names">
            <li> <%=survey.name%> </li>
          </ul>
        <%end%>
      </div>
      <form action="/careers" method="get">
        <button type="submit" name="atras">Back</button>
      </form>
    </section>
